{
  "name": "pen",
  "version": "1.0.0",
  "description": "A CodePen-like editor with live preview and preprocessing support",
  "type": "module",
  "bin": {
    "pen": "./cli/index.js"
  },
  "scripts": {
    "dev": "concurrently \"bun run dev:web\" \"bun run dev:server\"",
    "dev:web": "vite",
    "dev:server": "cd test-pen && bun ../cli/index.js --headless",
    "build": "vite build",
    "preview": "vite preview",
    "start": "bun cli/index.js"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.18.6",
    "@codemirror/commands": "^6.8.1",
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.9",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-sass": "^6.0.2",
    "@codemirror/language": "^6.11.0",
    "@codemirror/lint": "^6.8.5",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.36.5",
    "@emmetio/codemirror6-plugin": "^0.4.0",
    "@inquirer/prompts": "^7.4.0",
    "@lezer/highlight": "^1.2.1",
    "chii": "^1.15.5",
    "chokidar": "^4.0.3",
    "codemirror": "^6.0.1",
    "commander": "^13.1.0",
    "express": "^4.21.2",
    "less": "^4.2.2",
    "linkedom": "^0.18.9",
    "open": "^10.1.0",
    "postcss": "^8.5.3",
    "prettier": "^3.8.1",
    "sass": "^1.85.0",
    "splitpanes": "^3.1.5",
    "stylus": "^0.64.0",
    "terser": "^5.39.0",
    "typescript": "^5.7.3",
    "vue": "^3.5.13",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.1",
    "concurrently": "^9.2.1",
    "vite": "^6.1.0",
    "vite-plugin-singlefile": "^2.3.0"
  },
  "keywords": [
    "codepen",
    "editor",
    "live-preview",
    "preprocessor",
    "sass",
    "less",
    "typescript"
  ],
